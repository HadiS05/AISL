WinManager:
    CamHome:
    SecondWin:


<CamHome>:
    name: "main"


    FloatLayout:

        KivyCamera:
            id: cam
            size_hint: 1, 0.9
            pos_hint: {"top":1.0}

        Button:
            id: butt_start
            size_hint: 0.5,0.1
            text: "start"
            on_press: root.dostart()

        Button:
            id: butt_exit
            text: "stop"
            size_hint: 0.5,0.1
            pos_hint: {"right":1.0}
            on_press: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
                root.doexit()




<SecondWin>:
    name: "second"

    FloatLayout:
        Label:
            multiline: True
            text: root.y
            halign: 'center'
            text_size: self.size
            pos_hint: {'center_x':0.5, "y": 0.5}



        Button:
            text: "Go Back"
            size_hint: 0.5,0.1
            pos_hint: {"x":0.25}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
